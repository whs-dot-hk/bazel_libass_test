load("@rules_foreign_cc//tools/build_defs:configure.bzl", "configure_make")

filegroup(
  name = "all",
  srcs = glob(["**"]),
)

configure_make(
  name = "libuuid",
  configure_options = [
    "--disable-all-programs",
    "--enable-libuuid",
  ],
  lib_source = ":all",
  shared_libraries = [
    "libuuid.so",
  ],
  visibility = ["//visibility:public"],
)
